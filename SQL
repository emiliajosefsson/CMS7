#Implementation

#DROP SCHEMA IF EXISTS
DROP TABLE IF EXISTS admins; 
DROP TABLE IF EXISTS users;
DROP TABLE IF EXISTS entries;
DROP TABLE IF EXISTS comments;

CREATE TABLE Admins(
Id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
Username VARCHAR(50) NOT NULL,
Password VARCHAR(50) NOT NULL
)
ENGINE=InnoDB;

CREATE TABLE Users(
Id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
Username VARCHAR(50) NOT NULL,
Password VARCHAR(50) NOT NULL
)
ENGINE=InnoDB;

CREATE TABLE Category(
Id INT PRIMARY KEY NOT NULL AUTO_INCREMENT, 
CategoryName VARCHAR(50)
)

CREATE TABLE Entries(
Id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
Title VARCHAR(30) NOT NULL,
Entry VARCHAR(500) NOT NULL,
EntryDate DATE NOT NULL,
CategoryId INT NOT NULL,
Image VARCHAR(100), 
AdminsId INT NOT NULL,
CONSTRAINT FK_Admins FOREIGN KEY(AdminsId) REFERENCES Admins(Id),
CONSTRAINT FK_Category FOREIGN KEY(CategoryId) REFRENCES Category(Id)
)
ENGINE=InnoDB;

CREATE TABLE Comments(
Id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
EntriesId INT NOT NULL,
Comment VARCHAR(200) NOT NULL,
CommentDate DATE NOT NULL, 
UsersId INT NOT NULL,
CONSTRAINT FK_Entries FOREIGN KEY(EntriesId) REFERENCES Entries(Id),
CONSTRAINT FK_Users FOREIGN KEY(UsersId) REFERENCES Users(Id)
)
ENGINE=InnoDB;

